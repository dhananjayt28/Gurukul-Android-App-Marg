<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:paddingBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/statusIco"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:src="@drawable/bullet" />

    <TextView
        android:id="@+id/topicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:text="Topic Name"
        android:layout_weight="1"
        android:textColor="@color/colorTextLabel"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed" />

    <ImageView
        android:id="@+id/meterial"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/material"/>


    <Spinner
        android:id="@+id/action"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:background="@drawable/action"></Spinner>
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/reasonLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="bottom|start"
            android:hint="Reason for not complete"
            android:imeOptions="actionNext"
            android:inputType="textCapSentences"
            android:padding="10dp"
            android:textColorHint="@color/colorEditText" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>