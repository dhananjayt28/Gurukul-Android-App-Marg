            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Allotted Calendar"
                android:textColor="@color/colorPrimaryDeep"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"/>

            <TextView
                android:id="@+id/calendar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=" 01-Oct-17 - 10-Oct-17"
                android:textColor="@color/colorTextLabel"
                android:textSize="15sp"
                android:fontFamily="sans-serif-condensed" />
            <LinearLayout
                android:id="@+id/choosecal3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tvStartDate"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground">
                    <EditText
                        android:id="@+id/startDate3"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:hint="Start Date"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:layout_weight="1"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    android:layout_marginLeft="10dp">
                    <EditText
                        android:id="@+id/endDate3"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:hint="End Date"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/check_in" />

                <TextView
                    android:id="@+id/timeS2"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="10:00 AM "
                    android:textColor="@color/colorTextLabel"
                    android:textSize="15sp" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/intim2"
                    android:background="@color/colorBackground"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp">
                    <EditText
                        android:id="@+id/starttime2"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:hint="@string/check_in_time"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/check_out" />

                <TextView
                    android:id="@+id/timeE2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="05:00 PM "
                    android:textColor="@color/colorTextLabel"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-condensed" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/outtim2"
                    android:background="@color/colorBackground"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp">
                    <EditText
                        android:id="@+id/endtime2"
                        android:focusable="false"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:hint="@string/check_out_time"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
